@model SLShopping.Models.Category

@{
    ViewData["Title"] = "カテゴリー削除";
}

<h1>カテゴリー削除</h1>

<h3>本当に削除しますか？</h3>
<div>
    <h4>カテゴリー</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            名前
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="削除" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">戻る</a>
    </form>
</div>
