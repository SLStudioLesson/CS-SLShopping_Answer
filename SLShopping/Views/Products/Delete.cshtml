@model SLShopping.Models.Product

@{
    ViewData["Title"] = "商品削除";
}

<h1>商品削除</h1>

<h3>本当に削除しますか？</h3>
<div>
    <h4>商品</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            商品ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            商品名
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            値段
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            商品説明
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="削除" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">戻る</a>
    </form>
</div>
